<script>
document.getElementById("cp_btn").addEventListener("click", copy_password);

function copy_password() {
    var copyText = document.getElementById("pwd_spn");
    var textArea = document.createElement("textarea");
    textArea.value = copyText.textContent;
    document.body.appendChild(textArea);
    textArea.select();
    document.execCommand("Copy");
  	copyText.classList.add("copied");
 	document.getElementById('cp_btn').innerText = 'Link Copied';
    textArea.remove();
}
  function showLink() {
    var linkToCopy = document.getElementById("pwd_spn").innerText;
    var getHrefFacebook = document.getElementById('facebook-share');
    getHrefFacebook.setAttribute("href", `https://www.facebook.com/sharer/sharer.php?u=${linkToCopy}`); 
    var getHrefTwitter = document.getElementById('twitter-share');
    getHrefTwitter.setAttribute("href", `https://twitter.com/intent/tweet?text=${linkToCopy}`);
    var getHrefWhatsapp = document.getElementById('whatsapp-share');
    getHrefWhatsapp.setAttribute("href", `https://api.whatsapp.com/send?text=${linkToCopy}`);
  }
  $(document).ready(function(){
    setTimeout(showLink, 500);
    setTimeout(showLink, 2000);
    setTimeout(showLink, 4000);
    setTimeout(showLink, 8000);
  });

</script>