          <span>Address 1:</span> {{ customer.default_address.address1 }}<br>
  
        {% if customer.default_address.address2 != "" %}
          <span>Address 2:</span> {{ customer.default_address.address2 }}<br>
        {% endif %}
  
        {% if customer.default_address.city != "" %}
          <span>City:</span> {{ customer.default_address.city }}<br>
        {% endif %}
  		{% comment %}
        {% if customer.default_address.province_code != "" %}
          <span>Province Code:</span> {{ customer.default_address.province_code | upcase }}<br>
        {% endif %}
  		{% endcomment %}
        {% if customer.default_address.zip != "" %}
          <span>Post/Zip Code:</span> {{ customer.default_address.zip | upcase }}<br>
        {% endif %}
  
        {% if customer.default_address.country != "" %}
          <span>Country:</span> {{ customer.default_address.country }}<br>
        {% endif %}
  
        {% if customer.default_address.phone != "" %}
          <span>Phone:</span>  {{ customer.default_address.phone }}
        {% endif %}
        </p>
  
      {% endif %}
      </div>
      {% for address in customer.addresses limit:2 %}
      {% if forloop.last %}
      <div class="grid__item one-fifth small--one-half">
        <h5 class="fw-500" id="secondary-address-title">Secondary Address</h5>
     	 <p>
          <span>Address 1:</span> {{ address.address1 }}<br>
  
        {% if customer.default_address.address2 != "" %}
          <span>Address 2:</span> {{ address.address2 }}<br>
        {% endif %}
  
        {% if customer.default_address.city != "" %}
          <span>City:</span> {{ address.city }}<br>
        {% endif %}
  
        {% if customer.default_address.province_code != "" %}
          <span>Province Code:</span> {{ address.province_code | upcase }}<br>
        {% endif %}
  
        {% if customer.default_address.zip != "" %}
          <span>Zip Code:</span> {{ address.zip | upcase }}<br>
        {% endif %}
  
        {% if customer.default_address.country != "" %}
          <span>Country:</span> {{ address.country }}<br>
        {% endif %}
  
        {% if customer.default_address.phone != "" %}
          <span>Phone:</span>  {{ address.phone }}
        {% endif %}
        </p>
      </div>
      {% endif %}
      {% endfor %}
      <div class="grid__item one-fifth small--hide">
       <a class="btn account--btn" href="/account/addresses">View All</a>
