{% comment %}
  Gets the articles main tags - fitness health lifestyle etc. and
  returns as the variable "blog_main_tags" (array)
  This is separated on snipped, because the variable is used in many templates - blog, search, article
{% endcomment %}
{% assign blog_main_tags = "" %}
{% assign blog_main_tags_delimiter = ";" %}
{% for i in (1..10) %}
  {% capture loop_blog_filter %}Blog_filter_text_{{ i }}{% endcapture %}
  {% assign loop_blog_filter = settings[loop_blog_filter] | downcase | strip %}
  {% if loop_blog_filter == blank or loop_blog_filter == 'all' or loop_blog_filter == 'questions' %}
    {% continue %}
  {% endif %}
  
  {% if blog_main_tags != blank %}
    {% assign blog_main_tags = blog_main_tags | append: blog_main_tags_delimiter %}
  {% endif %}
  {% assign blog_main_tags = blog_main_tags | append: loop_blog_filter %}
{% endfor %}
{% assign blog_main_tags = blog_main_tags | split: blog_main_tags_delimiter %}
