body {
	position: relative;
	overflow-x: hidden;
}

.cart-popup-wrapper--hidden {
	display: none;
	transform: translateX(100%);
}
.cart-popup-backdrop {
	display: none;
	background: rgba(0, 0, 0, 0.25);
	width: 100vw;
	height: 100vh;
	position: fixed;
	left: 0;
	top: 0;
	z-index: 10001;
}

.cart-popup-wrapper {
	width: 700px;
	max-width: 100%;
	z-index: 10001;
	display: block;
	position: fixed;
	background-color: #f8f8f8;
	border: 1px solid #d3d3d3;
	border: none;
	transform: translateY(0%);
	transition: all 400ms cubic-bezier(0.29, 0.63, 0.44, 1);
	top: 0;
	right: 0;
}
@media (min-width: 701px) {
	.cart-popup-wrapper {
		/*width: 30rem;*/
		height: 100vh;
		/*z-index: 999999;*/
	}
}
@media (max-width: 700px) {
	.cart-popup-wrapper {
		min-width: 100%;
		bottom: 0;
		overflow-y: scroll;
	}
}

.cart-popup__header {
  padding: 0.68rem 0;
  border-bottom: 1px solid rgba(0,0,0,0.2);
  position: relative;
  margin: 0 24px;

}
.cart-popup__heading {
	flex-grow: 1;
	padding-top: 7px;
	margin: 0;
	line-height: 1;
	text-align: center;
}
.cart-popup__close {
	padding: 0.9rem;
	margin-right: -0.9rem;
	background-color: transparent;
	border: none;
	line-height: 0;
	text-align: center;
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
}
.cart-popup__close svg {
	width: 16px;
	height: 16px;
}

.cart-popup-shipping {
	padding: 18px 24px 7px;
}
.progress-bar {
	background: rgb(211,211,211, .5);
	position: relative;
	z-index: 2;
	width: 100%;
	height: 24px;
 }
.progress-bar .current-progress {
	background: #13aba5 !important;
	width: 0%;
	height: 24px;
 	transition: 0.3s ease all;
}
.progress-bar .progress-bar-text {
	font-size: 12px;
	font-weight: 700;
	position: relative;
	top: -88%;
	text-align: center;
}

.cart-upsell-loading {
	/* display: block; */
	width: 400px;
	height: 150px;
	background-color: white;
	line-height: 3rem;
	text-align: center;
}

.cart-upsell-image {
	width: 96px;
	height: 96px;
	display: inline-block;
	flex: 0 0 96px;
	position: relative;
}

.cart-upsell-title {
	display: inline-block;
	padding-top: 10px;
	padding-left: 5px;
	margin-left: 3px;
	vertical-align: top;
	font-size: 14px;
	font-weight: 700;
	letter-spacing: -0.03em;
	width: 100%;
    min-width: 50%;
}

.cart-upsell-add-to-cart {
	display: inline-block;
	float: right;
	border: 0 none;
	background: none;
	padding: 0;
	margin: 0;
	text-transform: uppercase;
	letter-spacing: 0.03em;
	color: #000;
	display: block;
	margin-left: auto;
	font-size: 12px;
	font-weight: 700;
	line-height: 1.4;
	border-bottom: 1px solid;
	position: absolute;
	bottom: 10px;
	right: 8px;
	cursor: pointer;
}

.cart-upsell-item {
	background-color: #F2EBE6;;
	/*width: 320px!important;
    margin: 0 40px!important;*/
	padding: 8px;
	/*border-radius: 8px;*/
	margin-bottom: 0px !important;

	min-width: 100%;
	display: flex;
}
@media (max-width: 500px) {
	.cart-upsell-item {
		min-width: 85vw;
	}
}

.cart-popup-wrapper {
	min-height: 100vh;
	overflow-x: hidden;
}
.cart-popup-wrapper--hidden {
	display: none;
	transform: translateX(100%);
}

.cart-popup {
  box-shadow: 1px 1px 10px 2px;
  box-shadow: none;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.cart-popup-item {
	display: flex;
	/* margin: 1rem 0; */
	padding: 1rem 0;
	position: relative;
	height: 128px;
	margin: 0 20px 10px 24px;

	/* no select */
	-webkit-touch-callout: none; /* iOS Safari */
	-webkit-user-select: none; /* Safari */
	-khtml-user-select: none; /* Konqueror HTML */
	-moz-user-select: none; /* Old versions of Firefox */
	-ms-user-select: none; /* Internet Explorer/Edge */
	user-select: none; /* Non-prefixed version, currently
                                    supported by Chrome, Edge, Opera and Firefox */
}

@media (max-width: 768px) {
  .cart-popup-item{
    margin: 0 24px 10px;
  }
}

.cart-popup-item-controls {
	display: flex;
    align-content: flex-start;
	flex-wrap: wrap;
	padding-left: 16px;
	width: 100%;
	position: relative;
    margin-top: 5px;
}
@media(max-width: 550px){
  .cart-popup-item-controls{
    align-content: unset;
  }
}
.cart-popup-item-title,
.cart-item-option {
	flex: 0 0 auto;
	width: 100%;
}
.cart-popup-item-quantity-wrapper {
  flex: 0 0 auto;
  font-weight: 700;
  margin-top: auto;
  position: absolute;
  line-height: 1.2;
  left: 50%;
}
@media(max-width: 550px){
  .cart-popup-item-quantity-wrapper{
    position: unset;
    margin-top: 0.25rem;
    width: 100%;
  }
}
.cart-popup-item-image > a > img,
.cart-popup-item-image > img {
	display: block;
	/*border-radius: 8px;*/
	max-height: 96px;
	max-width: 96px;
}
.cart-popup-item-title {
	font-weight: 700;
	margin-bottom: 0;
	font-size: 14px;
	max-width: 85%;
}
.cart-upsell-title a,
.cart-popup-item-title a {
	color: inherit;
}
.cart-upsell-title a:hover,
.cart-popup-item-title a:hover {
	color: #13aba5;
}
.cart-popup-item-remove {
	position: absolute;
	top: 5px;
	right: 0px;
	font-size: 12px;
	line-height: 1;
	cursor: pointer;
 	text-decoration: underline;
}
.cart-popup-item-Sale,
.cart-popup-item-flavor {
	display: block;
	font-weight: 400;
	padding-top: 1px;
	font-size: 12px;
	margin-top: 0.25rem;
	line-height: 1.5;
}
.cart-popup-item-Sale {
	/*   position: absolute;
    top: 110px;
    font-size: 12px;
    left: 8px; */
	color: #9b2728;
}

.cart-popup-item-size,
.cart-upsell-title-size {
	display: block;
	font-weight: 400;
	padding-top: 1px;
	font-size: 12px;
	margin-top: 0.25rem;
	line-height: 1.5;
}
.cart-upsell-title-size {
	margin-top: 1.2rem;
}

.cart-popup-item .cart-item-option-label {
	font-weight: 700;
}

.cart-popup-item-price {
  font-size: 14px;
  font-weight: 700;
  position: absolute;
  bottom: 30px;
  right: 0px;

}

@media(max-width: 550px){
  .cart-popup-item-price{
      bottom: 0px;
   }
}

.cart-popup-item-decrease-quantity,
.cart-popup-item-increase-quantity {
	display: inline-block;
	/*padding-top: 8px;*/
	line-height: 1;
	cursor: pointer;
}
.cart-popup-item-increase-quantity {
	vertical-align: text-bottom;
}
.cart-popup-item-quantity {
	line-height: 14px;
	display: inline-block;
	font-size: 14px;
}

.cart-popup-checkout-totals {
	border-top: 1px solid rgba(0,0,0,0.2);
	padding: 10px 0;
}

.cart-popup-totals,
.cart-popup-checkout {
	margin: 0 24px;
	padding: 0 0 10px 0;
}

.cart-popup-totals p,
.cart-popup-totals strong {
	margin-bottom: 5px;
	font-size: 14px;
}
.cart-popup-totals .pull-right {
	float: right;
}

.checkout_shipping,
.checkout_subtotal {
	margin-bottom: 5px;
	margin-top: 0;
	font-size: 14px;
}

.checkout_total {
	margin-bottom: 5px;
	font-size: 14px;
}

.cart-upsell-main-title {
	font-family: Raleway, sans-serif;
	font-weight: 700;
	text-transform: none;
	margin: 0 15px;
	padding-bottom: 11px;
	font-size: 15px;
	text-align: center;
	letter-spacing: unset;
}

.cart-upsell-splide-container {
  width: 100%;
  padding: 0 24px;
  min-height: 120px;
  margin-bottom: 10px; 
  
  @media(min-width: 760px){
	margin-bottom: 20px; 
  } 
}


.cart-upsell-splide-container .splide__arrow {
	background: transparent;
}

.cart-upsell-image img {
	/*border-radius: 8px;*/
	position: relative;
	top: -1px;
}

.cart-upsell-price {
	display: inline-block;
	vertical-align: top;
	font-weight: 700;
	margin-top: 9px;
	margin-left: 5px;
}

.cart-upsell-splide-container .splide__arrow--prev {
	left: -2em;
}

.cart-upsell-splide-container .splide__arrow--next {
	right: -2em;
}
.cart-popup-x-items-to-gift {
	transition: visibility 0.2s ease-in-out 0.9s !important;
}
.cart-popup-item .cart-popup-item-amount,
.cart-popup-item .cart-popup-item-property {
	display: block;
	font-weight: 400;
	padding-top: 1px;
	font-size: 12px;
	margin-top: 0.25rem;
	line-height: 1.5;
}
.cart-popup-item .cart-popup-item-property {
	max-width: 90%;
}
@media (max-width: 500px) {
	.cart-popup-item .cart-popup-item-property {
		max-width: 100%;
	}
}

.cart-popup-item-wrapper {
	overflow-y: scroll;
}
.cart-popup-item-wrapper::-webkit-scrollbar {
	width: 5px;
}
.cart-popup-item-wrapper::-webkit-scrollbar-track {
	background: white;
	border: 1px solid white;
}
.cart-popup-item-wrapper::-webkit-scrollbar-thumb {
	background: gray;
	border-radius: 25px;
}

@media (max-width: 768px) {
	.cart-popup-item-wrapper {
		overflow-y: hidden !important;
      	min-height: 45vh;
	}
}

@media (max-height: 700px) {
	.cart-popup-item-wrapper {
		overflow-y: hidden !important;
      	min-height: 35vh;
	}
}
@media (max-height: 640px) {
	.cart-popup-item-wrapper {
		overflow-y: hidden !important;
      	min-height: 30vh;
	}
}

@media (min-width: 769px) {
	.cart-popup-wrapper {
		overflow-y: hidden !important;
	}
}

@-moz-document url-prefix() {
	@media (max-width: 768px) {
		.cart-popup__body {
			margin-bottom: 50px;
		}
	}
}

@supports (-webkit-touch-callout: none) {
	.cart-popup__body.with-items {
		margin-bottom: 70px !important;
	}
  	.cart-popup-wrapper {
		height: 100%;
		height: -webkit-fill-available;
	}
  
  @media only screen 
    and (device-width: 414px) 
    and (device-height: 896px) 
    and (-webkit-device-pixel-ratio: 2) { 
      .cart-popup-item-wrapper {
        min-height: 35vh;
      }

    }
  
  @media only screen 
    and (device-width : 375px) 
    and (device-height : 667px) 
    and (-webkit-device-pixel-ratio : 2) { 
      .cart-popup-item-wrapper {
        min-height: 20vh;
      }
    
    }
  
}

@media (min-width: 769px) {
	.cart-popup-flex {
		height: 100%;
		max-height: 100vh;
		display: flex;
		flex-flow: column;
	}

	.cart-popup-flex .cart-popup__body {
		display: flex;
		flex-flow: column;
		flex: 1 0 0%;
		max-height: 100%;
	}

	.cart-popup-flex .cart-popup-item-wrapper {
		display: flex;
		flex-flow: column;
		flex: 1 0 0%;
		max-height: 100%;
		min-height: 0 !important;
		flex-basis: 100px;
        margin-right: 6px; 
		/* works when basis is in pixels */
	}
}

