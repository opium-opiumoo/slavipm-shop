<div class="product-lightbox" data-product-lightbox>
  <button class="product-lightbox-button close" data-product-lightbox-button="close">
    <svg><use xlink:href="#icon-close"></use></svg>
  </button>

  <div class="product-lightbox-images">
    {% for image in product.images %}
      {% include "attribute-image-box-ratio" %}

      {% include "filter-rias-img-url" input: image %}
      {% assign image_url = output %}

      <div class="image-box-ratio">
        <img
          data-src="{{ image_url }}"
          data-sizes="auto"
          class="lazyload lazyload-fade"
          alt="{{ image.alt | escape }}">
      </div>
    {% endfor %}
  </div>
</div>
