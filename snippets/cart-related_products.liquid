{% assign number_of_related_products_to_show = 4 %}
{% assign max_height = 345 %}
{% assign grid_item_width = 'small--one-half medium-up--one-half large-up--one-third' %}

{% for item in cart.items %}
  {% for coll in item.product.collections %}
    {% if forloop.first %}
		{% assign collection =  collections[coll.handle] %}	
	{% endif %}
  {% endfor %}	
{% endfor %}

{% assign number_of_related_products_to_fetch = number_of_related_products_to_show | plus: 1 %}
{% assign max_height = 345 %}
{% assign grid_item_width = 'small--one-half medium-up--one-third large-up--one-quarter' %}
  
{% if collection == null or collection.handle == 'frontpage' or collection.handle == 'all' %}
{% assign found_a_collection = false %}
{% for c in product.collections %}
  {% if found_a_collection == false and c.handle != 'frontpage' and c.handle != 'all' and c.all_products_count > 1 %}
    {% assign found_a_collection = true %}
    {% assign collection = c %}
  {% endif %}
{% endfor %}
{% endif %}

{% if collection and collection.products_count > 1 %}
    
<div class="grid--products grid--full collection_main_new">
  <h2>YOU MAY ALSO LIKEâ€¦</h2>
  <div class="grid--products grid--full collection_main_new related_products_cart related_products_cart_slider">
    {% assign current_product = product %}
    {% assign current_product_found = false %}
      {% assign hand = collection.handle %}
    {% for product in collection.products limit: number_of_related_products_to_fetch %}
      {% if product.handle == current_product.handle %}  
        {% assign current_product_found = true %}
      {% else %}
        {% unless current_product_found == false and forloop.last %}
          <div class="grid--products grid--full collection_main_new {{ grid_item_width }}">
            {% include 'product-grid-item'  %}
          </div>
        {% endunless %}
      {% endif %}
    {% endfor %}
  </div>
</div>

{% endif %}

