<!-- /templates/page.liquid -->
<div class="About_page">
  
  {% for block in section.blocks %}
  <div class="about-grid aos-init" data-aos="fade-in">
    <div class="About_page_left About_page_left_2">
    {% if block.settings.About_subtitle != blank %}<h2>{{ block.settings.About_subtitle }}</h2>{% endif %}
      {% if block.settings.About_heading-top != blank or block.settings.About_heading-bottom != blank %}
        <h3 class="{% if forloop.index == 1 %} About_page_left_heading {% endif %}">
          <span>{{ block.settings.About_heading-top }}</span>
          <span>{{ block.settings.About_heading-bottom }}</span>
        </h3>
      {% endif %}
      {% if block.settings.About_heading-small %}
        <h3 class="heading-small" style="font-size:{{ block.settings.About_heading-font }}px; line-height:{{ block.settings.About_heading-font }}px">{{ block.settings.About_heading-small }}</h3>
      {% endif %}
      {% if block.settings.About_para_1 %}
        <h4>{{ block.settings.About_para_1 }}</h4>
      {% endif %}
      
      {% if block.settings.About_para_1 %}
        <h5>{{ block.settings.About_para_2 }}</h5>
      {% endif %}
      
      {% if block.settings.About_para_1 %}
        <h6>{{ block.settings.About_para_3 }}</h6>
      {% endif %}
      
    </div>
    
    <div class="About_page_right">
      {% if block.settings.About_img %}
        <img data-src="{{ block.settings.About_img | img_url : 'master' }}" class="lazyload">
      {% endif %}
    </div>
  </div>
  {% endfor %}
  
</div>


{% schema %}
  {
    "name": "About Section",
    "settings": [
      
    ],
	"blocks": [
      {
        "type": "feature",
        "name": "About Text with Image",
        "settings": [
          
          {
            "type":"textarea",
            "id":"About_subtitle",
            "label":"About Subtitle"
          },
          {
            "type":"text",
            "id":"About_heading-top",
            "label":"About Heading Line 1 Right"
          },
          {
            "type":"text",
            "id":"About_heading-bottom",
            "label":"About Heading Line 2 Left"
          },
		  {
            "type":"text",
            "id":"About_heading-small",
            "label":"About Heading small"
          },
		  {
            "type": "range",
            "id": "About_heading-font",
            "min": 30,
            "max": 110,
            "step": 1,
            "unit": "px",
            "label": "About heading small font size",
			"default": 54
          },
          {
            "type":"richtext",
            "id":"About_para_1",
            "label":"About Paragraph 1"
          },
          {
            "type":"richtext",
            "id":"About_para_2",
            "label":"About Paragraph 2"
          },
          {
            "type":"richtext",
            "id":"About_para_3",
            "label":"About Paragraph 3"
          },
          {
            "type":"image_picker",
            "id":"About_img",
            "label":"About Right Side Image"
          }
          
        ]
      }
    ],
	"presets": [
      {
        "name": "About Section",
        "category": "About"
      }
    ]
  }

{% endschema %}

