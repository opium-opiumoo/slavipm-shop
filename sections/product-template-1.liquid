          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
  <div class="product_video">
    <div class="product_video_left">
      {%- if product.metafields.product-left.img != blank -%}
     	 <img data-src="{{ product.metafields.product-left.img }}" class="lazyload">
      {%- endif -%}
    </div>
    <div class="product_video_right">
      {%- if product.metafields.product-right.img != blank -%}
     	 <img data-src="{{ product.metafields.product-right.img }}" class="lazyload">
      {%- endif -%}
      {% comment %}
      <img data-src="{{ 'videos.png' | asset_url }}" class="video-center lazyload">
      {% endcomment %}
    </div>
  </div>
  {% comment %} 
  {% include 'okendo-reviews-widget' %}
  {% endcomment %}
