{% unless template == 'page.ambassadors-landing-page' %}
{%- assign hidePartOfTheFooter = false -%}
{%- if template == 'page.first-result' or template == 'page.landbot' or template == 'cart' or template == 'page.thank-you' or template contains "product" or template == 'page.retailers-landing-page' -%}
  {%- assign hidePartOfTheFooter = true -%}
{%- endif -%}

<footer class="site-footers small--text-center" role="contentinfo">
  {%- unless hidePartOfTheFooter or template contains 'customers' or template.suffix == 'press-item' -%}
    
    {% unless template.name == 'index' %}
    {% if template == 'page.about' or template == 'page.press' or template contains 'collection'%}
      {% if section.settings.additional_ctas %}
          {% include 'dolor_sit_redesign_snip' %}
      {% endif %}
    {% endif %}
    <div id="featured-blog" class="grid--full">
      <h2>{{ section.settings.Brand_heading }}</h2>
      
      <div class="featured-blog_grids">
        {% for i in (1..20) %}
          {% capture Brand_image %}Brand_image_{{ i }}{% endcapture %}  
          {% capture Brand_text %}Brand_text_{{ i }}{% endcapture %} 

          {% if section.settings[Brand_image] != blank and section.settings[Brand_text] != blank   %}
            <div class="featured-blog_list">
              <div class="featured-blog_list-image">
                <img class="lazyload" data-src="{{ section.settings[Brand_image] | img_url : '163x' }}">
              </div>
              <div class="featured-blog_list-content">
                <p>{{ section.settings[Brand_text] }}</p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
    {% endunless %}
  
  	{% unless template contains 'product' or template == 'page.affiliates'  %}
    {% if section.settings.insta_feed %}
      <div class="instragram_feed aos-init" data-aos="fade-in">
        <a href="{{ section.settings.Insta_heading_link }}" target="_blank" class="insta-heading">
          <h2>{{ section.settings.instagram_heading }}</h2>
        </a>
        
        <div id="insta-feed"></div>
      </div>
    {% endif %}
  {% endunless %}
{% comment %}
    <div class="live_more">
      <a href="{{ section.settings.Insta_tag_link }}" target="_blank" class="insta-heading"><h2>{{ section.settings.live_more_heading }}</h2></a>
      <ul>
        <li><a href="{{ section.settings.Insta_link }}" target="_blank"><p><i class="fa fa-instagram" aria-hidden="true"></i></p></a></li>
        <li><a href="{{ section.settings.Twitter_link }}" target="_blank"><p><i class="fa fa-twitter" aria-hidden="true"></i></p></a></li>
        <li><a href="{{ section.settings.Facebook_link }}" target="_blank"><p><i class="fa fa-facebook" aria-hidden="true"></i></p></a></li>
      </ul>
    </div>
  
    <div class="footer-wrapper">
      <div class="grid__item footer_left">
        <ul class="">
          {% for link in linklists[section.settings.footer_nav1].links %}
          <li>{{ link.title | link_to: link.url }}</li>
          {% endfor %}
        </ul>
      </div>
      <div class="grid__item footer_left">
        <ul class="">
          {% for link in linklists[section.settings.footer_nav2].links %}
            <li>{{ link.title | link_to: link.url }}</li>
          {% endfor %}
        </ul>
      </div>
  <div class="grid__item footer_left footer_left_2">
        <h3>{{ section.settings.join_the_heading }}</h3>
        <p>{{ section.settings.join_the_para }}</p>
        <div class="klaviyo-form-MFbG3B klaviyo-form"></div>
      </div>

    </div>
  {% endcomment %}
  {%- endunless -%}
  {% comment %}
  <div class="footer_additional"{% if hidePartOfTheFooter %} style="padding-top: 60px;"{% endif %}>
    <div class="footer_additional_wrapper">
      <div class="footer_additional_content">
        {% include 'new-svg-logo' %}
        <h6>{{ section.settings.footer_center_text_1 }} </h6>
        <h6>{{ section.settings.footer_center_text_2}}</h6>
        <p>{{ section.settings.footer_center_text_3}} </p>
      </div>
    </div>
  </div>
  
  <div class="footer_last_main">
    <div class="footer-last">
      <div class="footer-last_left">
        <p><span>&copy;</span> {{ section.settings.copyrights_text }}</p>
      </div>
      <div class="footer-last_right">
        <ul>
          <li><a href="{{ section.settings.Subpage_link }}"><p>{{ section.settings.Subpage_text }}</p></a></li>
          <li><a href="{{ section.settings.Subpage_link_2 }}"><p>{{ section.settings.Subpage_text_2 }}</p></a></li>
          <li><a href="{{ section.settings.Subpage_link_3 }}"><p>{{ section.settings.Subpage_text_3 }}</p></a></li>
        </ul>
      </div>
    </div>
  </div>
  {% endcomment %}
</footer>

<style>
    .site-footer {
      background-color: {{ section.settings.color_footer_bg }};
    }

    .social h1,
    .social a,
    .header,
    .shop-name {
      color: {{ section.settings.color_footer_header }};
    }

    .shop-name {
      fill: {{ section.settings.color_footer_header }};
    }

    .site-footer,
    .site-footer .list-column a,
    .payment-icons li,
    .social-icons li a,
    .site-header__logo {
      color: {{ section.settings.color_footer_text }};
    }

    .site-footer hr,
    .site-footer .grid__item {
      border-color: {{ section.settings.color_footer_HR }};
    }

    .footer-attribution {
      border: 1px solid {{ section.settings.color_footer_text }};
    }

    .footer-attribution a {
      color: {{ section.settings.color_footer_text }} !important;
    }

    .footer-payment svg {
      color: {{ section.settings.color_footer_text }};
    }
</style>
