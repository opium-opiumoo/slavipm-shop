      {% endif %}
      
      {% if section.settings.Home_banner_left_btn_1 != blank %}
      <a href="{{ section.settings.Home_banner_left_url_1 }}" class="homepage-product-btn">{{ section.settings.Home_banner_left_btn_1 }}</a>
      {% endif %}
    </div>
    <div class="Banner_section_right_home" {% if section.settings.Home_banner_right_1 != blank %} style="background-image:url('{{ section.settings.Home_banner_right_1 | img_url : 'master'}}');"{% endif %}>
