<div class="Banner_section_homes aos-init" data-aos="fade-in">
  <div class="banner_mains_homes">
    <div class="Banner_section_left_home" {% if section.settings.Home_banner_left_1 != blank %} style="background-image:url('{{ section.settings.Home_banner_left_1 | img_url : 'master'}}');"{% endif %}>
      {% if section.settings.Home_banner_left_prod_1 != blank %}
      	<img data-src="{{ section.settings.Home_banner_left_prod_1 | img_url : 'master' }}" class="lazyload" />
      {% endif %}
      
