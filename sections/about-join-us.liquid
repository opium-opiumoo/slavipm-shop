<div class="about-join-us" style="padding-top: {{ section.settings.padding_vertical }}px; padding-bottom: {{ section.settings.padding_vertical }}px; background-color: {{ section.settings.background }};">
<div class="wrapper"> 
  
  {% if section.settings.heading %}
  <h2 style="font-size:{{ section.settings.title-font }}px; line-height:{{ section.settings.title-font }}px" class="text-center meet-heading heading-small">{{ section.settings.heading }}</h2>
  {% endif %}
  
{% if section.settings.copy %}
  <div class="text-center meet-copy">
  {{ section.settings.copy }}
  </div>
{% endif %}

  

  
</div>
</div>
{% schema %}
  {
    "name": "Section name",
    "settings": [
	 {
       "type": "range",
       "id": "padding_vertical",
       "min": 0,
       "max": 100,
       "step": 1,
       "unit": "px",
       "label": "Vertical Padding",
	   "default": 20
    },   
    {
      "type": "color",
      "id": "background",
      "label": "Background Color"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
	{
      "type": "range",
      "id": "title-font",
      "min": 30,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Title font size",
      "default": 54
    },
	{
	  "type": "richtext",
	  "id": "copy",
	  "label": "Copy"
	}
   ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
