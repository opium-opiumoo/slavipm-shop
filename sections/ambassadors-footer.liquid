<div class="ambassadors-footer-wrapper">
  <div class="ambassadors-footer-inner">
    <h1 class="ambassadors-footer-title">{{ section.settings.title }}</h1>
   {{ section.settings.text }}
  <div class="ambassadors-footer-button">
    <a href="{{ section.settings.url1 }}" style="margin-right: 15px;" class="btn">{{ section.settings.btn1 }}</a>
    <a href="{{ section.settings.url2 }}" class="btn">{{ section.settings.btn2 }}</a>
  </div>
  </div>
</div>

<style>
  .ambassadors-footer-wrapper {
    background-color: {{ section.settings.bg_color }};
  }
</style>

{% schema %}
  {
    "name": "Ambassadors Footer",
    "settings": [
		{
			"type": "color",
			"id": "bg_color",
			"label": "Background Color",
			"default": "#f5f5f5"
		},
		{
			"type": "text",
			"id": "title",
			"label": "Title",
			"default": "Ready"
		},
		{
			"type": "richtext",
			"id": "text",
			"label": "Paragraph",
			"default": "<p>Are you ready to be a part of our community of Innermost ambassadors? Just click the buttons below to either apply or login to your account.</p>"
		},
		{
			"type": "text",
			"id": "btn1",
			"label": "Button 1",
			"default": "Sign up"
		},
		{
			"type": "url",
			"id": "url1",
			"label": "Button 1 Link"
		},
		{
			"type": "text",
			"id": "btn2",
			"label": "Button 2",
			"default": "Log in"
		},
		{
			"type": "url",
			"id": "url2",
			"label": "Button 2 Link"
		}
	]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

