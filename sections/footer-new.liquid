       {% render 'klaviyo-footer-selector' %}
       </div>
       {% include 'social-footer-new' %}
    {% include 'contact-us' %}
       <p class="footer-address">{{ section.settings.address}}</p>
     </div>
      </div>
    <div class="grid__item one-whole payment-icons-new">
    {% include 'payment-icons' %}
    </div>
   
    
  </div>
</footer>
