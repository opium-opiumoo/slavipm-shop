{% unless page.handle contains 'questionnaire' or template == 'page.thank-you' or template == 'page.ambassadors-landing-page' or template == 'page.affiliates' or template == 'page.retailers-landing-page' or template contains "customers" or page.handle contains "quiz" %}
<div class=" dolor_sit cta-section__wrapper"
  style="
    {% if section.settings.background != blank %}background-color: {{ section.settings.background }};{% endif %}
    {% comment %} old with dynamic parameters ; else it gets the style of the other such sections
      padding-top: {{ section.settings.padding_vertical }}px;
      padding-bottom: {{ section.settings.padding_vertical }}px;
    {% endcomment %}
  "
>
  {% if section.settings.cta_heading %}
    {% comment %} old one with dynamic parameters
  	<h3 class="heading-small" style="font-size:{{ section.settings.cta_heading_font }}px; line-height:{{ section.settings.cta_heading_font }}px">
      {{ section.settings.cta_heading }}
  	</h3>
    {% endcomment %}
    
    {% comment %} width the style of the other sections {% endcomment %}
    <h2>{{ section.settings.cta_heading }}</h2>
  {% endif %}
  <div class="cta-section__content" >
    {% if section.settings.content != blank %}
    <div class="cta-content para_uk dolor_regular">
      {{ section.settings.content }}
    </div>
    <div class="cta-content para_non_uk dolor_regular">
      {{ section.settings.content_non_uk }}
    </div>
    {% endif %}
    
    {% if section.settings.btn_text != blank and section.settings.btn_link != blank %}
      <button  class="trigger-popup dolor_sit_btn innermost_front_btn cta-button btn {% if section.settings.content == blank %} no-margin{% endif %}">
        {{ section.settings.btn_text }}
      </button>
    {% endif %}
  </div>
</div>
{% endunless %}
{% unless template == 'page.thank-you' %}
<footer class="site-footers new">
  <div class="grid">
    <div class="grid__item large--three-fifths small--margin-bottom-20">
	<div class="logo">
      {% include 'new-svg-logo' %}
      </div>
      <div class="grid">
        {% if section.settings.footer_nav1 != blank  %}
        {% assign menuItem = section.settings.footer_nav1 %}        
        {% include 'new-footer-item', menu: menuItem %}
        {% endif %}
        
        {% if section.settings.footer_nav2 != blank  %}
        {% assign menuItem = section.settings.footer_nav2 %}        
        {% include 'new-footer-item', menu: menuItem %}
        {% endif %}
        
        {% if section.settings.footer_nav3 != blank  %}
        {% assign menuItem = section.settings.footer_nav3 %}        
        {% include 'new-footer-item', menu: menuItem %}
        {% endif %}
        
        {% if section.settings.footer_nav4 != blank  %}
        {% assign menuItem = section.settings.footer_nav4 %}        
        {% include 'new-footer-item', menu: menuItem %}
        {% endif %}
        
        {% if section.settings.footer_nav5 != blank  %}
        {% assign menuItem = section.settings.footer_nav5 %}        
        {% include 'new-footer-item', menu: menuItem %}
        {% endif %}
        
        {% if section.settings.footer_nav6 != blank  %}
        {% assign menuItem = section.settings.footer_nav6 %}        
        {% include 'new-footer-item', menu: menuItem %}
        {% endif %}
         
        <div class="grid__item large--hide footer-nav">
          {% include 'multi-currency-mobile', footer: true %} 
        </div>
          
    </div>
 
  
      
    </div>
    <div class="grid__item large--two-fifths large--border-left">
     <div class="padding-left-custom">
     <div class="signup small--hide">
       {% if section.settings.join_the_heading  %}  <h6>{{ section.settings.join_the_heading }}</h6> {% endif %}
        {% if section.settings.join_the_para != blank  %} <p class="para_uk">{{ section.settings.join_the_para }}</p> {% endif %}
       {% if section.settings.join_the_para_non_uk != blank  %} <p class="para_non_uk">{{ section.settings.join_the_para_non_uk }}</p> {% endif %}
       {% comment %}
       {% render 'klaviyo-footer'%}
