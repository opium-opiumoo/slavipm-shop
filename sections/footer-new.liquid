      <div class="footer-last_right push--large--one-half">
        
        <ul>
          <li><a href="{{ section.settings.Subpage_link }}">{{ section.settings.Subpage_text }}</a></li>
          <li><a href="{{ section.settings.Subpage_link_2 }}">{{ section.settings.Subpage_text_2 }}</a></li>
          <li><a href="{{ section.settings.Subpage_link_3 }}">{{ section.settings.Subpage_text_3 }}</a></li>
          
        </ul>
        
        
