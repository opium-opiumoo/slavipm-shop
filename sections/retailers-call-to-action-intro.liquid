<div class="dolor_sit dolor_sit-{{ section.id }}">
  <div class="footer-wrapper">
    {% if section.settings.title != blank %}
      <h2 class="heading-small" style="font-size:{{ section.settings.title-font }}px; line-height:{{ section.settings.title-font }}px">{{ section.settings.title }}</h2>
    {% endif %}
    <div class="subheading">{{ section.settings.dolor_subheading }}</div>
    {% if section.settings.link and section.settings.link_text != blank %}
      <a id="dolor_sit_btn" class="innermost_front_btn btn {% comment %}account--btn{% endcomment %}" href="{{ section.settings.link }}">{{ section.settings.link_text }}</a>
    {% endif %}
  </div>
</div> 

<head>
<style>
  .dolor_sit-{{ section.id }}
  {
    background-color:{{ section.settings.dolor_color }};
    {% if section.settings.dolor_color_text %}
      color: {{ section.settings.dolor_color_text }};
    {% endif %}
  }
  
  .dolor_sit-{{ section.id }} h1
  {
    {% if section.settings.dolor_color_text %}
      color: {{ section.settings.dolor_color_text }};
    {% endif %}
  }
  
</style>
</head>

{% schema %}
  {
    "name": "Intro - retailers",
    "class": "lp-call-to-action",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "New Section"
      },
	  {
        "type": "range",
        "id": "title-font",
        "min": 30,
        "max": 120,
        "step": 1,
        "unit": "px",
        "label": "Title font size",
        "default": 54
      },
      {
        "type":"color",
        "id":"dolor_color",
        "label":"Background Color",
        "default": "#f5f5f5"
      },
      {
        "type":"color",
        "id":"dolor_color_text",
        "label":"Text Color",
        "default": "#525252"
      },
      {
        "type":"richtext",
        "id":"dolor_subheading",
        "label":"Paragraph"
      },
	  {
		"type": "url",
		"id": "link",
		"label": "Button Link"
	  },
	  {
		"type": "text",
		"id": "link_text",
		"default": "Learn More",
		"label": "Button Text"
      }
     ],
    "presets": [
      {
        "name": "New Section",
        "category": "Text"
      }
    ]
  }
{% endschema %}