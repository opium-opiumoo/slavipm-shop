<div class="ambassadors">
  <div class="ambassadors_main">
     {% include 'breadcrumb' %}
    <h1>{{ section.settings.Ambassadors_heading }}</h1>
    <p>{{ section.settings.Ambassadors_para_1 }}</p>
    <p>{{ section.settings.Ambassadors_para_2 }}</p>
  </div>
</div>
<div class="ambassadors_bottom">
  <div class="ambassadors_bottom_main">
    {% for article in blogs.News.articles %}
    {% for tag in article.tags %}
     {%assign taghand =  tag | handle %}
     {% if taghand == "ambassadors" %}
       <a href="{{ article.url }}" title="{{ article.title | escape }}"> 
      <div class="ambassadors_content">
      <div class="ambassadors_content_hover">
        {% if article.image %}
        {% include "filter-rias-img-url-with-height" input: article.image %}
        {% assign image_url = output %}
        <img
             data-src="{{ image_url }}"
             data-ratio="{{ article.image.aspect_ratio }}"
             data-sizes="auto"
             data-parent-fit="cover"
             class="lazyload lazyload-fade"
             alt="{{ article.image.alt | escape }}">   
        {% else %}
        {% if article.content contains "<img " %}
        {% assign src = article.content | split: 'src="' %}
        {% assign src = src[1] | split: '"' | first | replace: '//cdn', 'http://cdn' | replace: 'http:http://', 'http://' | remove: 'https:' %}
        <img data-src="{{ src }}" alt="{{ article.title | escape }}" class="lazyload" />
        {% endif %}    
        {% endif %}
      </div>

      <div class="ambassadors_content_white">
          <h3>{{ article.title | truncate: 25 }}</h3>
          <p> {{ article.excerpt_or_content | truncate: 180 }} </p>
        </div>
      </div>
        </a> 
     {% endif %}
  {% endfor %}
  {% endfor %}
  </div>
</div>

<style>
  .ambassadors
{
  width:100%;
  background:url('{{ section.settings.Ambassadors_image | img_url : 'master' }}');
    background-size: cover;
    background-repeat:no-repeat;
}
</style>


